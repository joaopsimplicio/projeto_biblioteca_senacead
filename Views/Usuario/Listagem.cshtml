@model List<Usuario>

<h1>Usuários cadastrados no sistema</h1>

<p class="text-danger"> @ViewData["mensagem"]</p>

<table class="table">
    <thead>
        <tr>
            <th scope="row">Nome</th>
            <th scope="row">Login</th>
            <th scope="row">Tipo</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                @if (u.Tipo == Usuario.Admin)
                {
                    <td>Administrador</td>
                }
                else
                {
                    <td>Padrão</td>
                }

                <td><a href="Edicao?id=@u.Id">Editar</a></td>
                <td><a href="Exclusao?id=@u.Id">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Usuario/Cadastro">Registrar novo usuário</a>